<div class="login-container border p-4 text-center bg-dark text-light d-flex align-items-center justify-content-center" style="height: 635px; width: 544px; border-radius: 20px; margin: auto;">
  <div class="form w-100">
    <h1 class="mb-4" style="font-size: 36px; font-weight: 600; color: #F2B705; text-transform: uppercase;">Sign up</h1>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'w-100' }) do |f| %>
      <div class="mb-3">
        <div class="text-left">
          <%= f.label :email, "Email", class: 'form-label text-light' %>
        </div>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
      </div>

      <div class="mb-3">
        <div class="text-left">
          <%= f.label :password, "Password", class: 'form-label text-light' %>
        </div>
        <%= f.password_field :password, autocomplete: "new-password", class: 'form-control' %>
      </div>

      <div class="mb-3">
        <div class="text-left">
          <%= f.label :password_confirmation, "Confirm Password", class: 'form-label text-light' %>
        </div>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
      </div>

      <%= f.submit 'Sign up', class: 'btn btn-warning btn-lg mb-3', style: 'width: 287px; height: 80px; background-color: #F2B705; color: black; font-weight: bold; font-size: 24px; border-radius: 50px;' %>
    <% end %>
  </div>
</div>
